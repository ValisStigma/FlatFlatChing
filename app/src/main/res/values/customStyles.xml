<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/backgroundColor</item>
        <item name="android:baselineAligned">false</item>
    </style>
    <style name="backgroundPane">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="actionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/green</item>
        <item name="android:elevation">10dp</item>
    </style>
    <style name="messageShower">
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/red</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>
    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
    </style>
    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/ColorPrimary</item>
<!--        <item name="android:dayOfWeekBackground">@color/ColorPrimaryDark</item>
        <item name="android:headerMonthTextAppearance">@color/ColorPrimaryDark</item>
        <item name="android:headerDayOfMonthTextAppearance">@color/ColorPrimaryDark</item>
        <item name="android:headerYearTextAppearance">@color/ColorPrimaryDark</item>
        <item name="android:yearListItemTextAppearance">@color/ColorPrimaryDark</item>
        <item name="android:yearListSelectorColor">@color/ColorPrimaryDark</item>-->
    </style>

</resources>