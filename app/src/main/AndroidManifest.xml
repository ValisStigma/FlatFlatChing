<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flatflatching.flatflatching" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".activities.FlatActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ExpensesActivity"
            android:label="@string/title_activity_expenses" >
        </activity>
        <activity
            android:name=".activities.ShoppingListActivity"
            android:label="@string/title_activity_shopping_list" >
        </activity>
        <activity
            android:name=".activities.CreateFlatActivity"
            android:label="@string/title_activity_create_flat" >
        </activity>
        <activity
            android:name=".activities.ManageFlatMatesActivity"
            android:label="@string/title_activity_manage_flat_mates" >
        </activity>
        <activity android:name=".activities.NewExpenseActivity" >
        </activity>
        <activity android:name=".activities.ExitActivity" >
        </activity>
    </application>

</manifest>
